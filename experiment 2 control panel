<body>

  <h1>Game Control Panel</h1>

  <button class="start" onclick="startGame()">Start Game</button>
  <button class="end" onclick="endGame()">End Game</button>
  <button class="view" onclick="viewResults()">View Results</button>
  <button class="download" onclick="downloadCSV()">Download CSV</button>

  <script>
    function startGame() {
      fetch('https://REGION-PROJECT.cloudfunctions.net/startGame', { method: 'POST' })
        .then(() => alert('Game started!'))
        .catch(() => alert('Failed to start game.'));
    }

    function endGame() {
      fetch('https://REGION-PROJECT.cloudfunctions.net/endGame', { method: 'POST' })
        .then(() => alert('Game ended!'))
        .catch(() => alert('Failed to end game.'));
    }

    function viewResults() {
      window.open('https://storage.googleapis.com/my-bucket/final_visualization.png', '_blank');
    }

    function downloadCSV() {
      window.open('https://storage.googleapis.com/my-bucket/results/final_scores.csv', '_blank');
    }
  </script>

</body>
</html>
