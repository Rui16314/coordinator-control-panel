  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      padding-top: 50px;
      background-color: #f4f4f4;
    }
    h1 {
      color: #333;
    }
    button {
      margin: 15px;
      padding: 15px 30px;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }
    .start { background-color: #4CAF50; color: white; }
    .end { background-color: #f44336; color: white; }
    .view { background-color: #2196F3; color: white; }
    .download { background-color: #FF9800; color: white; }
  </style>
